{
  "name": "react-node-insim",
  "version": "0.0.1",
  "description": "React Node InSim",
  "author": "Martin Kapal <flamecze@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "typings": "dist/index.d.ts",
  "repository": "git@github.com:simbroadcasts/react-node-insim.git",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "run-s build:js build:ts",
    "build:js": "microbundle --tsconfig tsconfig.lib.json",
    "build:ts": "tsc -p tsconfig.lib.json",
    "start": "tsx watch src/example/index.tsx",
    "format": "run-s \"format:no-write --write\"",
    "format:no-write": "prettier \"./**/*.{js,ts,md,json,yml,yaml}\"",
    "format:check": "run-s \"format:no-write --check\"",
    "lint": "eslint \"./src/**/*\" --ext .js,.ts",
    "lint:fix": "eslint \"./src/**/*\" --ext .js,.ts --fix"
  },
  "peerDependencies": {
    "node-insim": "^0.10.2",
    "react": ">=18"
  },
  "dependencies": {
    "@types/react-reconciler": "^0.28.2",
    "@welefen/grid-layout": "^1.1.0",
    "debug": "^4.3.4",
    "react-reconciler": "0.29.0",
    "yoga-layout-prebuilt": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/debug": "^4.1.7",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "esbuild": "^0.15.13",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "microbundle": "^0.15.1",
    "node-insim": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.0",
    "react": "18.2.0",
    "tsx": "^3.12.6",
    "typescript": "^4.9.5"
  },
  "files": [
    "**/*.js",
    "**/*.d.ts"
  ]
}
