{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es2015",
    "module": "commonjs",
    "skipLibCheck": true,
    "lib": ["es2022"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "paths": {
      "react-node-insim": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
